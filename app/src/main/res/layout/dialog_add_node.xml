<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:text="X"
        android:textAppearance="?android:attr/textAppearanceMedium"/>

    <EditText
        android:id="@+id/txtX"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView"
        android:layout_toLeftOf="@+id/btnCalculateX"
        android:layout_toStartOf="@+id/btnCalculateX"
        android:ems="10"
        android:inputType="numberDecimal|numberSigned"
        android:selectAllOnFocus="true"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView"
        android:layout_alignRight="@+id/textView"
        android:layout_below="@+id/txtX"
        android:text="Y"
        android:textAppearance="?android:attr/textAppearanceMedium"/>

    <EditText
        android:id="@+id/txtY"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView2"
        android:layout_gravity="center_horizontal"
        android:layout_toLeftOf="@+id/btnCalculateX"
        android:layout_toStartOf="@+id/btnCalculateX"
        android:ems="10"
        android:inputType="numberDecimal|numberSigned"
        android:selectAllOnFocus="true"/>

    <ImageButton
        android:id="@+id/btnCalculateX"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView2"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/txtX"
        android:adjustViewBounds="true"
        android:maxWidth="40dp"
        android:minWidth="40dp"
        android:nestedScrollingEnabled="false"
        android:padding="0dp"
        android:src="@drawable/ic_calculator"/>

    <ImageButton
        android:id="@+id/btnCalculateY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txtY"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/txtY"
        android:adjustViewBounds="true"
        android:maxWidth="40dp"
        android:minWidth="40dp"
        android:nestedScrollingEnabled="false"
        android:padding="0dp"
        android:src="@drawable/ic_calculator"/>


</RelativeLayout>